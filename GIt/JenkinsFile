pipeline {
    agent any
    environment {
        DOCKER_CREDENTIALS_ID = 'Docker_Id'  
        DOCKER_IMAGE_NAME = 'manishpandey123/python'  
        SONARQUBE_IMAGE_NAME = 'sonarqube:latest' 
        SONARQUBE_URL = 'http://localhost:9000'  
        SONARQUBE_USERNAME = 'admin'  
        SONARQUBE_PASSWORD = '0000'  
    }
    stages {
        stage('Checkout') {
            steps {
               
                checkout([$class: 'GitSCM', 
                          branches: [[name: '*/main']], 
                          userRemoteConfigs: [[url: 'https://github.com/Manish-Pandey-ji/Python_Programing.git']]
                ])
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                  
                    dir('C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\Github\\GIt') {
                        docker.build("${DOCKER_IMAGE_NAME}:${BUILD_NUMBER}")
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                   
                    docker.image("${DOCKER_IMAGE_NAME}:${BUILD_NUMBER}").inside ('-w /app'){
                        bat '''
                        sonar-scanner \
                          -Dsonar.projectKey=My_Project_key \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=${SONARQUBE_URL} \
                          -Dsonar.login=${SONARQUBE_USERNAME} \
                          -Dsonar.password=${SONARQUBE_PASSWORD}
                        '''
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_CREDENTIALS_ID}") {
                       
                        docker.image("${DOCKER_IMAGE_NAME}:${BUILD_NUMBER}").push()
                    }
                }
            }
        }
    }
}
