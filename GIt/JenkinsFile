    agent any
    tools {
        jdk 'JDK21'
        maven 'Maven3'
    }
    stages {
        stage('Checkout') {
            steps {
               
                checkout([$class: 'GitSCM', 
                          branches: [[name: '*/main']], 
                          userRemoteConfigs: [[url: 'https://github.com/Manish-Pandey-ji/Python_Programing.git']]
                ])
            }
        }

        stage('Test') {
            steps {
                script {
                        bat '''
                        sonar-scanner.bat -D"sonar.projectKey=Python-Project" -D"sonar.sources=." -D"sonar.host.url=http://localhost:9000" -D"sonar.token=sqp_a8a0301fa305b0da33bcd43d423644a40dbecccf"
                        '''
                }
            }
        }
    }
}

